root = true

[*]
end_of_line = LF
charset = utf-8
max_line_length = 120
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2

[*.{js,css,vim}]
max_line_length = 80

[*.py]
indent_size = 4
max_line_length = 80

[*.{md,go}]
trim_trailing_whitespace = false
max_line_length = 80
